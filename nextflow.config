manifest {
  author = "Julien Fouret"
  version = "1.0.5"
  defaultBranch = "main"
  name = "compress_fq"
  description = "Compress FQ"
  homePage        = 'https://github.com/nexomis/compress_fq'
  mainScript      = 'main.nf'
  nextflowVersion = '>=23.04.2'
}

plugins {
    id 'nf-validation@1.1.3'
}

params {
  help = false
  in_dir = null
  out_dir = null
  publish_dir_mode = "link"
  hash_algo = "md5"
  n_bytes = 4
  drop_order = true
  drop_ids = true
  quality_mode = "ill_bin"
  ncpus = 4
  mem_spring = 8
  mem_check = 12
}

includeConfig "modules/config/profiles.config"
includeConfig "config/process.config"
includeConfig "config/ext.config"
includeConfig "config/publish.config"

